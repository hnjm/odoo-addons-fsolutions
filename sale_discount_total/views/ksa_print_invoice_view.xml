<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <template id="tax_invoice_report_document" inherit_id="print_invoice_ksa.tax_invoice_report_document">
            <xpath expr="//div[@id='total']/div/table/tr[1]" position="after">
                <tr class="border-black o_total">
                    <td>
                        <strong>
                            Total Discount
                            /
                            اجمالي الخصم
                        </strong>
                    </td>
                    <td class="text-right">
                        <span class="text-nowrap" t-field="o.amount_discount"/>
                    </td>
                </tr>
            </xpath>
        </template>
