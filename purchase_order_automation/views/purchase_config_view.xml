<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form_purchase" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.purchase</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="25"/>
            <field name="inherit_id" ref="purchase.res_config_settings_view_form_purchase"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@data-key='purchase']" position="inside">
                    <h2>Purchase Order Automation</h2>
                    <div class="row mt16 o_settings_container" name="request_vendor_setting_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="is_purchase_deliver"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="is_purchase_deliver"/>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="is_create_bill"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="is_create_bill"/>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="is_validate_bill"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="is_validate_bill"/>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
